---
import Icon from "astro-iconify";

const variant = {
  primary: "bg-primary text-white",
  secondary: "bg-secondary text-white",
};

interface Props {
  msg: string;
  class?: string;
}

const { msg } = Astro.props;
---

<!-- target="_blank" -->
<a
  id="whatsappButton"
  href=`https://wa.me/18293053240/?text=`
  rel="noopener noreferrer"
  class:list={[
    "inline-flex w-full items-center justify-center gap-2 rounded-lg bg-green-500 hover:bg-green-700 px-4 py-2 font-medium text-white shadow-md transition-all duration-300 ease-in-out hover:scale-95",
    Astro.props.class,
  ]}
>
  <Icon name="mdi:whatsapp" size="32px" class="inline" />
  WhatsApp
</a>
<div class="text-[12px] md:text-sm text-center font-inter mt-2">
  <small>Impuestos incluidos</small>
</div>
